<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.neartox.retrofitwithrecyclerview.fragment.TrackInfoFragment"
    >


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/track_img_big"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        fresco:placeholderImage="@drawable/placeholder"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/track_name_"
        android:layout_row="0"
        android:layout_column="1"
        android:paddingLeft="10dp"
        android:layout_gravity="bottom"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/track_username_"
        android:layout_row="1"
        android:layout_column="1"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:textStyle="italic"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/track_followers_txt"
        android:text="@string/followers_txt"
        android:layout_row="3"
        android:layout_column="0"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/track_location"
        android:layout_row="2"
        android:layout_column="1"
        android:linksClickable="true"
        android:paddingBottom="10dp"
        android:layout_gravity="right"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_rowSpan="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/track_followers_"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="15sp"/>

</GridLayout>
